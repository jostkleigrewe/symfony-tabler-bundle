{
    "name": "jostkleigrewe/symfony-tabler-bundle",
    "description": "Tabler Design System FormTypes and Components for Symfony",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": ["symfony", "tabler", "form", "ui", "components", "design-system"],
    "require": {
        "php": ">=8.4",
        "symfony/form": "^7.0 || ^8.0",
        "symfony/twig-bundle": "^7.0 || ^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "symplify/easy-coding-standard": "^12.0 || ^13.0"
    },
    "suggest": {
        "symfony/ux-twig-component": "Required for standalone Twig components (FloatingInput etc.)",
        "doctrine/orm": "Required for EntityCardType"
    },
    "autoload": {
        "psr-4": {
            "Jostkleigrewe\\TablerBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jostkleigrewe\\TablerBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "vendor/bin/ecs check",
        "cs:fix": "vendor/bin/ecs check --fix",
        "stan": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
