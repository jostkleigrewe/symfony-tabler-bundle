{#
    DE: Leerer Zustand für Listen ohne Einträge
    EN: Empty state for lists without entries

    @see Jostkleigrewe\TablerBundle\Twig\Components\EmptyState
#}
<div class="empty">
    <div class="empty-icon">
        <i class="ti ti-{{ icon }} text-{{ iconColor.value }}"></i>
    </div>
    <p class="empty-title">{{ title }}</p>
    {% if text %}
        <p class="empty-subtitle text-secondary">{{ text }}</p>
    {% endif %}
    {% if actionUrl and actionLabel %}
        <div class="empty-action">
            <a href="{{ actionUrl }}" class="btn btn-{{ actionVariant.value }}">
                {{ actionLabel }}
            </a>
        </div>
    {% endif %}
</div>
