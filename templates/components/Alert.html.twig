    EN: Alert component for notifications

    @see Jostkleigrewe\TablerBundle\Twig\Components\Alert
#}
<div class="alert alert-{{ type }}{{ important ? ' alert-important' : '' }}{{ dismissible ? ' alert-dismissible' : '' }}" role="alert">
    <div class="d-flex">
        <div class="me-2">
            <i class="ti ti-{{ this.icon }}"></i>
        </div>
        <div>
            {% if title %}
                <h4 class="alert-title">{{ title }}</h4>
            {% endif %}
            {% if text %}
                <div class="text-secondary">{{ text }}</div>
            {% endif %}
            {% block content %}{{ content|default('') }}{% endblock %}
        </div>
    </div>
    {% if dismissible %}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    {% endif %}
</div>
