/**
 * =================================================================
 * TABLER BUNDLE - Pattern Backgrounds
 * Animierte Hintergrund-Patterns für beliebige Elemente
 *
 * Verwendbar für: Hero-Sections, Divider, Headers, Footers,
 *                 Cards, Sidebars, Modals, etc.
 *
 * ─────────────────────────────────────────────────────────────────
 * KLASSEN-STRUKTUR:
 * ─────────────────────────────────────────────────────────────────
 *
 * .pattern-bg                     Base-Klasse (erforderlich)
 *
 * PATTERN-TYPEN:
 *   .pattern-particles            Schwebende Punkte
 *   .pattern-particles-sso        SSO-Icons (Keys, Shields, Locks)
 *   .pattern-particles-tech       Code-Symbole
 *   .pattern-particles-network    Netzwerk-Knoten
 *   .pattern-waves                Animierte Wellen
 *   .pattern-geometric            Geometrische Formen
 *   .pattern-blob                 Organische Blobs
 *   .pattern-grid                 Tech-Grid
 *   .pattern-topo                 Topografische Linien
 *   .pattern-dots                 Dot-Matrix
 *   .pattern-circuit              Schaltkreis-Linien
 *
 * FARB-MODI:
 *   .pattern-dark                 Dunkler Hintergrund
 *   .pattern-light                Heller Hintergrund
 *   .pattern-gradient             Gradient-Hintergrund
 *   .pattern-transparent          Transparenter Hintergrund
 *
 * GRÖßEN:
 *   .pattern-hero                 Volle Hero-Section (min-height)
 *   .pattern-section              Section-Höhe
 *   .pattern-header               Header-Höhe
 *   .pattern-footer               Footer-Höhe
 *   .pattern-card                 Card-Höhe
 *   .pattern-compact              Kompakt
 *
 * INTENSITÄT:
 *   .pattern-subtle               Dezent
 *   .pattern-medium               Standard
 *   .pattern-intense              Intensiv
 *
 * ANIMATION:
 *   .pattern-slow                 Langsam
 *   .pattern-fast                 Schnell
 *   .pattern-static               Keine Animation
 *
 * ─────────────────────────────────────────────────────────────────
 * BEISPIELE:
 * ─────────────────────────────────────────────────────────────────
 *
 * Hero mit SSO-Partikeln:
 *   <section class="pattern-bg pattern-particles-sso pattern-dark pattern-hero">
 *
 * Header mit Wellen:
 *   <header class="pattern-bg pattern-waves pattern-dark pattern-header">
 *
 * Card mit Geometrie:
 *   <div class="pattern-bg pattern-geometric pattern-light pattern-card pattern-subtle">
 *
 * Footer mit Grid:
 *   <footer class="pattern-bg pattern-grid pattern-dark pattern-footer">
 *
 * =================================================================
 */

/* -----------------------------------------------------------------
   CSS Custom Properties
   ----------------------------------------------------------------- */
:root {
    /* Primärfarben (überschreibbar pro Projekt) */
    --pattern-primary: var(--eurip-blue, var(--tblr-primary, #0f3d91));
    --pattern-secondary: var(--eurip-azure, var(--tblr-azure, #1f74ff));
    --pattern-accent: var(--eurip-navy, #0a1f44);

    /* RGB-Varianten für rgba() */
    --pattern-secondary-rgb: var(--eurip-azure-rgb, 31, 116, 255);

    /* Hintergrundfarben */
    --pattern-bg-dark: var(--eurip-navy, #0a1f44);
    --pattern-bg-light: var(--eurip-ice, #eef4ff);
    --pattern-bg-surface: var(--tblr-bg-surface, #ffffff);

    /* Partikel */
    --pattern-particle-color: var(--pattern-secondary);
    --pattern-particle-glow: var(--pattern-secondary);

    /* Animation */
    --pattern-speed: 1;
    --pattern-glow: 0.4;
}

/* -----------------------------------------------------------------
   Base Structure
   ----------------------------------------------------------------- */
.pattern-bg {
    position: relative;
    overflow: hidden;
}

.pattern-bg > .pattern-layer {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
}

.pattern-bg > .pattern-content,
.pattern-bg > :not(.pattern-layer):not([class*="particle"]):not([class*="glow"]):not([class*="blob"]):not([class*="wave"]):not([class*="geo"]):not([class*="node"]):not([class*="grid"]):not([class*="scan"]):not([class*="sso-icon"]):not([class*="connection"]):not([class*="topo"]):not([class*="dot"]):not([class*="circuit"]):not([class*="page-controls"]) {
    position: relative;
    z-index: 2;
}

/* -----------------------------------------------------------------
   Size Modifiers
   ----------------------------------------------------------------- */
.pattern-hero {
    min-height: 480px;
}

.pattern-section {
    min-height: 300px;
    padding: 4rem 0;
}

.pattern-header {
    min-height: 200px;
    padding: 2rem 0;
}

.pattern-footer {
    min-height: 150px;
    padding: 2rem 0;
}

.pattern-card {
    min-height: 200px;
    border-radius: var(--tblr-border-radius-lg, 0.5rem);
}

.pattern-compact {
    min-height: 100px;
    padding: 1rem 0;
}

.pattern-divider {
    min-height: 60px;
}

/* =================================================================
   PARTICLES - Standard
   ================================================================= */
.pattern-particles {
    background: linear-gradient(180deg, var(--pattern-bg-dark) 0%, color-mix(in srgb, var(--pattern-bg-dark) 80%, var(--pattern-primary)) 100%);
}

.pattern-particles.pattern-light {
    background: linear-gradient(180deg, var(--pattern-bg-light) 0%, var(--pattern-bg-surface) 100%);
}

.pattern-particles.pattern-transparent {
    background: transparent;
}

/* Glow Layer */
.pattern-particles > .pattern-layer {
    background:
        radial-gradient(circle at 20% 30%, color-mix(in srgb, var(--pattern-primary) 30%, transparent) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, color-mix(in srgb, var(--pattern-secondary) 25%, transparent) 0%, transparent 40%);
}

/* Partikel */
.pattern-particles .particle {
    position: absolute;
    border-radius: 50%;
    background: var(--pattern-particle-color);
    opacity: 0.6;
    animation: pattern-float calc(20s / var(--pattern-speed)) ease-in-out infinite;
}

/* 25 Partikel-Positionen */
.pattern-particles .p1 { width: 6px; height: 6px; top: 8%; left: 12%; animation-delay: 0s; }
.pattern-particles .p2 { width: 8px; height: 8px; top: 18%; left: 28%; animation-delay: -2s; }
.pattern-particles .p3 { width: 4px; height: 4px; top: 12%; left: 48%; animation-delay: -4s; }
.pattern-particles .p4 { width: 10px; height: 10px; top: 28%; left: 65%; animation-delay: -6s; }
.pattern-particles .p5 { width: 5px; height: 5px; top: 8%; left: 78%; animation-delay: -8s; }
.pattern-particles .p6 { width: 7px; height: 7px; top: 22%; left: 88%; animation-delay: -10s; }
.pattern-particles .p7 { width: 6px; height: 6px; top: 48%; left: 18%; animation-delay: -1s; }
.pattern-particles .p8 { width: 9px; height: 9px; top: 58%; left: 38%; animation-delay: -3s; }
.pattern-particles .p9 { width: 4px; height: 4px; top: 52%; left: 58%; animation-delay: -5s; }
.pattern-particles .p10 { width: 8px; height: 8px; top: 68%; left: 72%; animation-delay: -7s; }
.pattern-particles .p11 { width: 5px; height: 5px; top: 62%; left: 92%; animation-delay: -9s; }
.pattern-particles .p12 { width: 6px; height: 6px; top: 78%; left: 22%; animation-delay: -11s; }
.pattern-particles .p13 { width: 7px; height: 7px; top: 82%; left: 52%; animation-delay: -13s; }
.pattern-particles .p14 { width: 5px; height: 5px; top: 72%; left: 82%; animation-delay: -15s; }
.pattern-particles .p15 { width: 8px; height: 8px; top: 38%; left: 8%; animation-delay: -17s; }
.pattern-particles .p16 { width: 3px; height: 3px; top: 5%; left: 38%; animation-delay: -0.5s; }
.pattern-particles .p17 { width: 5px; height: 5px; top: 32%; left: 95%; animation-delay: -2.5s; }
.pattern-particles .p18 { width: 7px; height: 7px; top: 42%; left: 42%; animation-delay: -4.5s; }
.pattern-particles .p19 { width: 4px; height: 4px; top: 88%; left: 68%; animation-delay: -6.5s; }
.pattern-particles .p20 { width: 6px; height: 6px; top: 92%; left: 12%; animation-delay: -8.5s; }
.pattern-particles .p21 { width: 5px; height: 5px; top: 15%; left: 5%; animation-delay: -10.5s; }
.pattern-particles .p22 { width: 4px; height: 4px; top: 45%; left: 85%; animation-delay: -12.5s; }
.pattern-particles .p23 { width: 6px; height: 6px; top: 75%; left: 5%; animation-delay: -14.5s; }
.pattern-particles .p24 { width: 7px; height: 7px; top: 95%; left: 45%; animation-delay: -16.5s; }
.pattern-particles .p25 { width: 5px; height: 5px; top: 35%; left: 32%; animation-delay: -18.5s; }

@keyframes pattern-float {
    0%, 100% { transform: translate(0, 0); opacity: 0.6; }
    25% { transform: translate(30px, -30px); opacity: 0.8; }
    50% { transform: translate(0, -60px); opacity: 0.4; }
    75% { transform: translate(-30px, -30px); opacity: 0.7; }
}

/* Glow Circles */
.pattern-particles .glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: var(--pattern-glow);
}

.pattern-particles .glow-1 {
    width: 400px;
    height: 400px;
    background: var(--pattern-primary);
    top: -100px;
    left: -100px;
}

.pattern-particles .glow-2 {
    width: 300px;
    height: 300px;
    background: var(--pattern-secondary);
    bottom: -50px;
    right: -50px;
}

.pattern-particles .glow-3 {
    width: 200px;
    height: 200px;
    background: var(--pattern-accent);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: calc(var(--pattern-glow) * 0.5);
}

/* =================================================================
   PARTICLES SSO - Sicherheits-Icons
   ================================================================= */
.pattern-particles-sso {
    background: linear-gradient(135deg, var(--pattern-bg-dark) 0%, color-mix(in srgb, var(--pattern-bg-dark) 70%, var(--pattern-primary)) 100%);
}

.pattern-particles-sso.pattern-light {
    background: linear-gradient(135deg, var(--pattern-bg-light) 0%, var(--pattern-bg-surface) 100%);
}

.pattern-particles-sso > .pattern-layer {
    background:
        radial-gradient(circle at 30% 20%, color-mix(in srgb, var(--pattern-primary) 20%, transparent) 0%, transparent 40%),
        radial-gradient(circle at 70% 80%, color-mix(in srgb, var(--pattern-secondary) 15%, transparent) 0%, transparent 35%);
}

/* SSO Icon Particles */
.pattern-particles-sso .icon {
    position: absolute;
    color: var(--pattern-secondary);
    opacity: 0.15;
    animation: pattern-icon-float calc(25s / var(--pattern-speed)) ease-in-out infinite;
}

.pattern-particles-sso.pattern-light .icon {
    color: var(--pattern-primary);
    opacity: 0.12;
}

/* 20 Icon-Positionen */
.pattern-particles-sso .i1 { top: 5%; left: 8%; font-size: 1.5rem; animation-delay: 0s; }
.pattern-particles-sso .i2 { top: 12%; left: 75%; font-size: 2.5rem; animation-delay: -2s; }
.pattern-particles-sso .i3 { top: 30%; left: 5%; font-size: 2rem; animation-delay: -4s; }
.pattern-particles-sso .i4 { top: 22%; left: 90%; font-size: 1.8rem; animation-delay: -6s; }
.pattern-particles-sso .i5 { top: 52%; left: 85%; font-size: 2.2rem; animation-delay: -8s; }
.pattern-particles-sso .i6 { top: 68%; left: 8%; font-size: 1.6rem; animation-delay: -10s; }
.pattern-particles-sso .i7 { top: 78%; left: 62%; font-size: 2rem; animation-delay: -12s; }
.pattern-particles-sso .i8 { top: 42%; left: 32%; font-size: 1.4rem; animation-delay: -14s; opacity: 0.1; }
.pattern-particles-sso .i9 { top: 58%; left: 52%; font-size: 1.8rem; animation-delay: -16s; opacity: 0.1; }
.pattern-particles-sso .i10 { top: 88%; left: 28%; font-size: 1.5rem; animation-delay: -18s; }
.pattern-particles-sso .i11 { top: 8%; left: 42%; font-size: 1.3rem; animation-delay: -1s; opacity: 0.12; }
.pattern-particles-sso .i12 { top: 38%; left: 68%; font-size: 2.8rem; animation-delay: -3s; opacity: 0.08; }
.pattern-particles-sso .i13 { top: 72%; left: 42%; font-size: 1.7rem; animation-delay: -5s; }
.pattern-particles-sso .i14 { top: 18%; left: 52%; font-size: 1.4rem; animation-delay: -7s; opacity: 0.1; }
.pattern-particles-sso .i15 { top: 85%; left: 82%; font-size: 2rem; animation-delay: -9s; }
.pattern-particles-sso .i16 { top: 48%; left: 12%; font-size: 1.6rem; animation-delay: -11s; }
.pattern-particles-sso .i17 { top: 92%; left: 55%; font-size: 1.3rem; animation-delay: -13s; }
.pattern-particles-sso .i18 { top: 25%; left: 25%; font-size: 1.9rem; animation-delay: -15s; opacity: 0.08; }
.pattern-particles-sso .i19 { top: 62%; left: 28%; font-size: 1.5rem; animation-delay: -17s; }
.pattern-particles-sso .i20 { top: 35%; left: 78%; font-size: 1.7rem; animation-delay: -19s; opacity: 0.1; }

@keyframes pattern-icon-float {
    0%, 100% {
        transform: translate(0, 0) rotate(0deg);
        opacity: 0.15;
    }
    25% {
        transform: translate(20px, -25px) rotate(10deg);
        opacity: 0.2;
    }
    50% {
        transform: translate(-10px, -50px) rotate(-5deg);
        opacity: 0.1;
    }
    75% {
        transform: translate(-25px, -25px) rotate(5deg);
        opacity: 0.18;
    }
}

/* Verbindungslinien */
.pattern-particles-sso .line {
    position: absolute;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--pattern-secondary), transparent);
    opacity: 0.1;
    animation: pattern-line-pulse calc(8s / var(--pattern-speed)) ease-in-out infinite;
}

.pattern-particles-sso .l1 { width: 200px; top: 20%; left: 15%; transform: rotate(25deg); animation-delay: 0s; }
.pattern-particles-sso .l2 { width: 150px; top: 50%; left: 60%; transform: rotate(-15deg); animation-delay: -2s; }
.pattern-particles-sso .l3 { width: 180px; top: 75%; left: 25%; transform: rotate(10deg); animation-delay: -4s; }
.pattern-particles-sso .l4 { width: 120px; top: 35%; left: 45%; transform: rotate(-30deg); animation-delay: -6s; }
.pattern-particles-sso .l5 { width: 160px; top: 65%; left: 70%; transform: rotate(20deg); animation-delay: -8s; }

@keyframes pattern-line-pulse {
    0%, 100% { opacity: 0.05; }
    50% { opacity: 0.15; }
}

/* =================================================================
   PARTICLES NETWORK - Netzwerk
   ================================================================= */
.pattern-particles-network {
    background: linear-gradient(135deg, var(--pattern-bg-dark) 0%, #1a1a2e 100%);
}

.pattern-particles-network .node {
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--pattern-secondary);
    border-radius: 50%;
    opacity: 0.6;
    box-shadow: 0 0 10px var(--pattern-particle-glow);
    animation: pattern-node-pulse calc(4s / var(--pattern-speed)) ease-in-out infinite;
}

.pattern-particles-network .n1 { top: 15%; left: 20%; animation-delay: 0s; }
.pattern-particles-network .n2 { top: 25%; left: 50%; animation-delay: -0.5s; }
.pattern-particles-network .n3 { top: 20%; left: 80%; animation-delay: -1s; }
.pattern-particles-network .n4 { top: 50%; left: 10%; animation-delay: -1.5s; }
.pattern-particles-network .n5 { top: 55%; left: 45%; animation-delay: -2s; }
.pattern-particles-network .n6 { top: 45%; left: 75%; animation-delay: -2.5s; }
.pattern-particles-network .n7 { top: 80%; left: 25%; animation-delay: -3s; }
.pattern-particles-network .n8 { top: 75%; left: 60%; animation-delay: -3.5s; }
.pattern-particles-network .n9 { top: 85%; left: 85%; animation-delay: -4s; }
.pattern-particles-network .n10 { top: 35%; left: 35%; animation-delay: -0.25s; }
.pattern-particles-network .n11 { top: 65%; left: 90%; animation-delay: -1.25s; }
.pattern-particles-network .n12 { top: 90%; left: 45%; animation-delay: -2.25s; }

@keyframes pattern-node-pulse {
    0%, 100% { transform: scale(1); opacity: 0.6; box-shadow: 0 0 10px var(--pattern-particle-glow); }
    50% { transform: scale(1.5); opacity: 1; box-shadow: 0 0 20px var(--pattern-particle-glow); }
}

/* Netzwerk-Linien */
.pattern-particles-network .edge {
    position: absolute;
    height: 1px;
    background: linear-gradient(90deg, var(--pattern-secondary), transparent);
    opacity: 0.2;
}

.pattern-particles-network .e1 { width: 200px; top: 20%; left: 22%; transform: rotate(5deg); }
.pattern-particles-network .e2 { width: 180px; top: 23%; left: 52%; transform: rotate(-20deg); }
.pattern-particles-network .e3 { width: 150px; top: 52%; left: 12%; transform: rotate(30deg); }
.pattern-particles-network .e4 { width: 160px; top: 50%; left: 47%; transform: rotate(10deg); }
.pattern-particles-network .e5 { width: 140px; top: 78%; left: 27%; transform: rotate(15deg); }
.pattern-particles-network .e6 { width: 170px; top: 60%; left: 62%; transform: rotate(-5deg); }
.pattern-particles-network .e7 { width: 130px; top: 40%; left: 72%; transform: rotate(25deg); }

/* SVG-basierte Verbindungslinien */
.pattern-particles-network .connection-lines {
    position: absolute;
    inset: 0;
    opacity: 0.3;
    pointer-events: none;
}

.pattern-particles-network .connection-lines svg {
    width: 100%;
    height: 100%;
}

.pattern-particles-network .connection-lines line {
    stroke: var(--pattern-secondary);
    stroke-width: 1;
    animation: pattern-line-draw calc(4s / var(--pattern-speed)) ease-in-out infinite;
}

@keyframes pattern-line-draw {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.6; }
}

/* =================================================================
   WAVES - Animierte Wellen
   ================================================================= */
.pattern-waves {
    background: linear-gradient(180deg, var(--pattern-bg-dark) 0%, var(--pattern-primary) 100%);
}

.pattern-waves.pattern-light {
    background: linear-gradient(180deg, var(--pattern-bg-light) 0%, var(--pattern-bg-surface) 100%);
}

.pattern-waves .wave-container {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 150px;
    overflow: hidden;
}

.pattern-waves .wave {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 200%;
    height: 100%;
}

.pattern-waves .w1 {
    animation: pattern-wave calc(12s / var(--pattern-speed)) linear infinite;
    opacity: 0.6;
}

.pattern-waves .w2 {
    animation: pattern-wave calc(8s / var(--pattern-speed)) linear infinite reverse;
    opacity: 0.4;
    bottom: 10px;
}

.pattern-waves .w3 {
    animation: pattern-wave calc(15s / var(--pattern-speed)) linear infinite;
    opacity: 0.2;
    bottom: 20px;
}

@keyframes pattern-wave {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
}

/* Wellen am oberen Rand */
.pattern-waves.pattern-waves-top .wave-container {
    top: 0;
    bottom: auto;
    transform: rotate(180deg);
}

/* =================================================================
   GEOMETRIC - Geometrische Formen
   ================================================================= */
.pattern-geometric {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
}

.pattern-geometric.pattern-dark {
    background: linear-gradient(135deg, var(--pattern-bg-dark) 0%, #1e293b 100%);
}

.pattern-geometric .shape {
    position: absolute;
    opacity: 0.15;
}

.pattern-geometric .shape svg {
    width: 100%;
    height: 100%;
}

.pattern-geometric .s1 { width: 300px; height: 300px; top: -100px; right: 10%; animation: pattern-geo-rotate calc(30s / var(--pattern-speed)) linear infinite; }
.pattern-geometric .s2 { width: 200px; height: 200px; bottom: -50px; left: 5%; animation: pattern-geo-rotate calc(25s / var(--pattern-speed)) linear infinite reverse; }
.pattern-geometric .s3 { width: 250px; height: 250px; top: 30%; right: -50px; animation: pattern-geo-float calc(8s / var(--pattern-speed)) ease-in-out infinite; }
.pattern-geometric .s4 { width: 150px; height: 150px; bottom: 20%; left: 15%; animation: pattern-geo-float calc(10s / var(--pattern-speed)) ease-in-out infinite reverse; }
.pattern-geometric .s5 { width: 180px; height: 180px; top: 15%; left: 30%; animation: pattern-geo-rotate calc(20s / var(--pattern-speed)) linear infinite; opacity: 0.1; }
.pattern-geometric .s6 { width: 120px; height: 120px; bottom: 35%; right: 25%; animation: pattern-geo-float calc(12s / var(--pattern-speed)) ease-in-out infinite; opacity: 0.1; }

@keyframes pattern-geo-rotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

@keyframes pattern-geo-float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(10deg); }
}

/* =================================================================
   BLOB - Organische Formen
   ================================================================= */
.pattern-blob {
    background: var(--pattern-bg-dark);
}

.pattern-blob.pattern-light {
    background: var(--pattern-bg-light);
}

.pattern-blob .blob {
    position: absolute;
    filter: blur(60px);
    opacity: 0.5;
    animation: pattern-blob-morph calc(15s / var(--pattern-speed)) ease-in-out infinite;
}

.pattern-blob .b1 {
    width: 500px;
    height: 500px;
    background: var(--pattern-primary);
    top: -150px;
    left: -100px;
    border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
}

.pattern-blob .b2 {
    width: 400px;
    height: 400px;
    background: var(--pattern-secondary);
    bottom: -100px;
    right: -50px;
    border-radius: 40% 60% 70% 30% / 40% 70% 30% 60%;
    animation-delay: -5s;
}

.pattern-blob .b3 {
    width: 300px;
    height: 300px;
    background: var(--pattern-accent);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 50% 50% 40% 60% / 60% 40% 60% 40%;
    animation-delay: -10s;
    opacity: 0.3;
}

@keyframes pattern-blob-morph {
    0%, 100% {
        border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    }
    33% {
        border-radius: 70% 30% 50% 50% / 30% 60% 40% 70%;
    }
    66% {
        border-radius: 40% 60% 70% 30% / 50% 40% 60% 50%;
    }
}

/* =================================================================
   GRID - Tech Grid
   ================================================================= */
.pattern-grid {
    background: #030712;
}

.pattern-grid .grid {
    position: absolute;
    inset: 0;
    background-image:
        linear-gradient(rgba(31, 116, 255, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(31, 116, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
}

.pattern-grid .scan {
    position: absolute;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--pattern-secondary), transparent);
    animation: pattern-scan calc(4s / var(--pattern-speed)) ease-in-out infinite;
}

.pattern-grid .sc1 { top: 30%; }
.pattern-grid .sc2 { top: 60%; animation-delay: -2s; opacity: 0.5; }

@keyframes pattern-scan {
    0%, 100% { opacity: 0; transform: translateY(-20px); }
    50% { opacity: 1; transform: translateY(20px); }
}

.pattern-grid .dot {
    position: absolute;
    width: 4px;
    height: 4px;
