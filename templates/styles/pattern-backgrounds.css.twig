/* =================================================================
   HERO CONTENT COMPONENTS
   Reusable components for hero sections
   ================================================================= */

/* Security Badge */
.pattern-bg .security-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: rgba(var(--pattern-secondary-rgb, 31, 116, 255), 0.15);
    border: 1px solid rgba(var(--pattern-secondary-rgb, 31, 116, 255), 0.3);
    padding: 0.625rem 1.25rem;
    border-radius: 3rem;
    margin-bottom: 2rem;
}

.pattern-bg .security-badge .icon-wrap {
    width: 28px;
    height: 28px;
    background: var(--pattern-secondary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.pattern-bg .security-badge .icon-wrap i {
    font-size: 0.875rem;
    color: #fff;
}

.pattern-bg .security-badge span {
    color: rgba(255, 255, 255, 0.9);
    font-weight: 600;
    font-size: 0.9rem;
    letter-spacing: 0.02em;
}

/* Hero Typography */
.pattern-bg h1 {
    color: #fff;
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
}

.pattern-bg h1 .highlight {
    background: linear-gradient(135deg, var(--pattern-secondary) 0%, #60a5fa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.pattern-bg .hero-lead {
    color: rgba(255, 255, 255, 0.75);
    font-size: 1.25rem;
    line-height: 1.7;
    margin-bottom: 2.5rem;
    max-width: 600px;
}

/* Hero Actions (Button Row) */
.pattern-bg .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
}

.pattern-bg .btn-particle-primary {
    background: var(--pattern-secondary);
    color: #fff;
    border: none;
    padding: 1rem 2.5rem;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 0.75rem;
    box-shadow: 0 10px 40px -10px rgba(var(--pattern-secondary-rgb, 31, 116, 255), 0.5);
    transition: all 0.3s ease;
}

.pattern-bg .btn-particle-primary:hover {
    background: color-mix(in srgb, var(--pattern-secondary) 80%, white);
    transform: translateY(-2px);
    box-shadow: 0 15px 50px -10px rgba(var(--pattern-secondary-rgb, 31, 116, 255), 0.6);
    color: #fff;
}

.pattern-bg .btn-particle-secondary {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.25);
    color: #fff;
    padding: 1rem 2.5rem;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
}

.pattern-bg .btn-particle-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.4);
    color: #fff;
}

/* Stats Grid */
.pattern-bg .stats-grid {
    display: flex;
    gap: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.pattern-bg .stat-item {
    text-align: center;
}

.pattern-bg .stat-item i {
    font-size: 1.5rem;
    color: var(--pattern-secondary);
    margin-bottom: 0.5rem;
    display: block;
}

.pattern-bg .stat-value {
    display: block;
    color: #fff;
    font-size: 1.75rem;
    font-weight: 700;
}

.pattern-bg .stat-label {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.85rem;
}

/* Glass Card */
.pattern-bg .glass-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

[data-bs-theme="dark"] .pattern-bg .glass-card {
    background: rgba(30, 41, 59, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

/* Responsive Hero */
@media (max-width: 767.98px) {
    .pattern-bg h1 {
        font-size: 2.25rem;
    }

    .pattern-bg .stats-grid {
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .pattern-bg .btn-particle-primary,
    .pattern-bg .btn-particle-secondary {
        padding: 0.875rem 1.5rem;
        width: 100%;
        text-align: center;
    }
}

/* =================================================================
   INTENSITY MODIFIERS
   ================================================================= */
.pattern-subtle {
    --pattern-glow: 0.2;
}

.pattern-subtle .particle,
.pattern-subtle .icon,
.pattern-subtle .node,
.pattern-subtle .blob,
.pattern-subtle .shape {
    opacity: 0.08 !important;
}

.pattern-intense {
    --pattern-glow: 0.6;
}

.pattern-intense .particle,
.pattern-intense .icon,
.pattern-intense .node {
    opacity: 0.8 !important;
}

/* =================================================================
   ANIMATION MODIFIERS
   ================================================================= */
.pattern-slow {
    --pattern-speed: 0.5;
}

.pattern-fast {
    --pattern-speed: 2;
}

.pattern-static,
.pattern-static * {
    animation: none !important;
}

/* -----------------------------------------------------------------
   Hover-to-Play: Animation nur bei Hover aktiv (Performance)
   ----------------------------------------------------------------- */
.pattern-hover-play .pattern-layer,
.pattern-hover-play .pattern-layer * {
    animation-play-state: paused !important;
}

.pattern-hover-play:hover .pattern-layer,
.pattern-hover-play:hover .pattern-layer * {
    animation-play-state: running !important;
}

/* Sanfter Übergang beim Aktivieren */
.pattern-hover-play .pattern-layer {
    transition: opacity 0.3s ease;
    opacity: 0.5;
}

.pattern-hover-play:hover .pattern-layer {
    opacity: 1;
}

/* =================================================================
   REDUCED MOTION
   ================================================================= */
@media (prefers-reduced-motion: reduce) {
    .pattern-bg *,
    .pattern-bg::before,
    .pattern-bg::after {
        animation: none !important;
        transition: none !important;
    }
}

/* =================================================================
   RESPONSIVE
   ================================================================= */
@media (max-width: 768px) {
    .pattern-hero {
        min-height: 380px;
    }

    .pattern-particles .glow,
    .pattern-blob .blob {
        transform: scale(0.6);
    }

    .pattern-geometric .shape {
        transform: scale(0.5);
    }

    .pattern-particles-sso .icon {
        font-size: 1rem !important;
    }
}
