.pattern-global-bg .p5 { width: 5px; height: 5px; top: 8%; left: 78%; animation-delay: -8s; }
.pattern-global-bg .p6 { width: 7px; height: 7px; top: 22%; left: 88%; animation-delay: -10s; }
.pattern-global-bg .p7 { width: 6px; height: 6px; top: 48%; left: 18%; animation-delay: -1s; }
.pattern-global-bg .p8 { width: 9px; height: 9px; top: 58%; left: 38%; animation-delay: -3s; }
.pattern-global-bg .p9 { width: 4px; height: 4px; top: 52%; left: 58%; animation-delay: -5s; }
.pattern-global-bg .p10 { width: 8px; height: 8px; top: 68%; left: 72%; animation-delay: -7s; }
.pattern-global-bg .p11 { width: 5px; height: 5px; top: 62%; left: 92%; animation-delay: -9s; }
.pattern-global-bg .p12 { width: 6px; height: 6px; top: 78%; left: 22%; animation-delay: -11s; }
.pattern-global-bg .p13 { width: 7px; height: 7px; top: 82%; left: 52%; animation-delay: -13s; }
.pattern-global-bg .p14 { width: 5px; height: 5px; top: 72%; left: 82%; animation-delay: -15s; }
.pattern-global-bg .p15 { width: 8px; height: 8px; top: 38%; left: 8%; animation-delay: -17s; }
.pattern-global-bg .p16 { width: 3px; height: 3px; top: 5%; left: 38%; animation-delay: -0.5s; }
.pattern-global-bg .p17 { width: 5px; height: 5px; top: 32%; left: 95%; animation-delay: -2.5s; }
.pattern-global-bg .p18 { width: 7px; height: 7px; top: 42%; left: 42%; animation-delay: -4.5s; }
.pattern-global-bg .p19 { width: 4px; height: 4px; top: 88%; left: 68%; animation-delay: -6.5s; }
.pattern-global-bg .p20 { width: 6px; height: 6px; top: 92%; left: 12%; animation-delay: -8.5s; }

@media (prefers-reduced-motion: reduce) {
    .pattern-global-bg .particle {
        animation: none;
    }
}

@media (max-width: 768px) {
    .pattern-global-bg .glow {
        transform: scale(0.6);
    }
}
</style>

