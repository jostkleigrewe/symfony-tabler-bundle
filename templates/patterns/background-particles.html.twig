{#
    Particles Background Pattern
    ============================

    Einfach in base.html.twig nach <body> einf√ºgen:
    {% include '@Tabler/patterns/background-particles.html.twig' %}

    Optionale Parameter:
    {% include '@Tabler/patterns/background-particles.html.twig' with {
        theme: 'dark',        // dark, light
        intensity: 'medium',  // subtle, medium, intense
        fixed: true           // true = fixed, false = absolute
    } %}
#}
{% set theme = theme|default('dark') %}
{% set intensity = intensity|default('medium') %}
{% set fixed = fixed|default(true) %}

<style>
.pattern-global-bg {
    position: {{ fixed ? 'fixed' : 'absolute' }};
    inset: 0;
    pointer-events: none;
    z-index: -1;
    overflow: hidden;
    {% if theme == 'dark' %}
    background: linear-gradient(180deg, var(--pattern-bg-dark, #0a1f44) 0%, color-mix(in srgb, var(--pattern-bg-dark, #0a1f44) 80%, var(--pattern-primary, #0f3d91)) 100%);
    {% else %}
    background: linear-gradient(180deg, var(--pattern-bg-light, #eef4ff) 0%, var(--pattern-bg-surface, #ffffff) 100%);
    {% endif %}
}

.pattern-global-bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
        radial-gradient(circle at 20% 30%, rgba(31,116,255,0.2) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(15,61,145,0.15) 0%, transparent 40%);
}

.pattern-global-bg .glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    {% if intensity == 'subtle' %}
    opacity: 0.2;
    {% elseif intensity == 'intense' %}
    opacity: 0.5;
    {% else %}
    opacity: 0.35;
    {% endif %}
}

.pattern-global-bg .glow-1 {
    width: 400px;
    height: 400px;
    background: var(--pattern-primary, #0f3d91);
    top: -100px;
    left: -100px;
}

.pattern-global-bg .glow-2 {
    width: 300px;
    height: 300px;
    background: var(--pattern-secondary, #1f74ff);
    bottom: -50px;
    right: -50px;
}

.pattern-global-bg .glow-3 {
    width: 200px;
    height: 200px;
    background: var(--pattern-accent, #0a1f44);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.2;
}

.pattern-global-bg .particle {
    position: absolute;
    border-radius: 50%;
    {% if theme == 'dark' %}
    background: var(--pattern-secondary, #1f74ff);
    {% else %}
    background: var(--pattern-primary, #0f3d91);
    {% endif %}
    {% if intensity == 'subtle' %}
    opacity: 0.3;
    {% elseif intensity == 'intense' %}
    opacity: 0.8;
    {% else %}
    opacity: 0.5;
    {% endif %}
    animation: particle-float 20s ease-in-out infinite;
}

@keyframes particle-float {
    0%, 100% { transform: translate(0, 0); opacity: 0.5; }
    25% { transform: translate(30px, -30px); opacity: 0.7; }
    50% { transform: translate(0, -60px); opacity: 0.3; }
    75% { transform: translate(-30px, -30px); opacity: 0.6; }
}

/* 20 Particle Positions */
.pattern-global-bg .p1 { width: 6px; height: 6px; top: 8%; left: 12%; animation-delay: 0s; }
.pattern-global-bg .p2 { width: 8px; height: 8px; top: 18%; left: 28%; animation-delay: -2s; }
