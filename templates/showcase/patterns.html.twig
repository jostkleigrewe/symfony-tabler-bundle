                    <div class="glow glow-1"></div>
                    <div class="glow glow-2"></div>
                    {% for i in 1..5 %}
                        <div class="line l{{ i }}"></div>
                    {% endfor %}
                    <i class="ti ti-shield-lock icon i1"></i>
                    <i class="ti ti-key icon i2"></i>
                    <i class="ti ti-lock icon i3"></i>
                    <i class="ti ti-shield-check icon i4"></i>
                    <i class="ti ti-fingerprint icon i5"></i>
                    <i class="ti ti-user-check icon i6"></i>
                    <i class="ti ti-certificate icon i7"></i>
                    <i class="ti ti-shield icon i8"></i>
                    <i class="ti ti-lock-access icon i9"></i>
                    <i class="ti ti-user-shield icon i10"></i>
                    <i class="ti ti-key icon i11"></i>
                    <i class="ti ti-shield-lock icon i12"></i>
                    <i class="ti ti-lock icon i13"></i>
                    <i class="ti ti-certificate icon i14"></i>
                    <i class="ti ti-fingerprint icon i15"></i>
                </div>
                <div class="pattern-content">
                    <div class="container py-5">
                        <div class="row align-items-center">
                            <div class="col-lg-7">
                                <span class="badge bg-white bg-opacity-15 text-white mb-3 px-3 py-2">
                                    <i class="ti ti-shield-check me-1"></i> Enterprise SSO
                                </span>
                                <h1 class="text-white display-5 fw-bold mb-3">
                                    Sichere Authentifizierung für alle Ihre Apps.
                                </h1>
                                <p class="text-white opacity-75 lead mb-4">
                                    Ein Login, volle Kontrolle. OIDC-konform, audit-fähig und in Minuten integriert.
                                </p>
                                <div class="d-flex gap-3 flex-wrap">
                                    <button class="btn btn-light btn-lg">
                                        <i class="ti ti-login me-2"></i> Jetzt starten
                                    </button>
                                    <button class="btn btn-outline-light btn-lg">
                                        <i class="ti ti-book me-2"></i> Dokumentation
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Header Size #}
    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title">Header (pattern-header)</h3>
        </div>
        <div class="card-body p-0">
            <div class="pattern-bg pattern-particles-sso pattern-dark pattern-header">
                <div class="pattern-layer">
                    <div class="glow glow-1"></div>
                    <div class="glow glow-2"></div>
                    <i class="ti ti-shield-lock icon i1"></i>
                    <i class="ti ti-key icon i2"></i>
                    <i class="ti ti-lock icon i3"></i>
                    <i class="ti ti-shield-check icon i4"></i>
                    <i class="ti ti-fingerprint icon i5"></i>
                </div>
                <div class="pattern-content">
                    <div class="container d-flex align-items-center justify-content-between h-100">
                        <div>
                            <h2 class="text-white mb-1">Dashboard</h2>
                            <p class="text-white opacity-75 mb-0">Willkommen zurück, Admin</p>
                        </div>
                        <div>
                            <button class="btn btn-outline-light">
                                <i class="ti ti-settings me-2"></i> Einstellungen
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Footer Size #}
    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title">Footer (pattern-footer, pattern-subtle)</h3>
        </div>
        <div class="card-body p-0">
            <div class="pattern-bg pattern-particles-sso pattern-dark pattern-footer pattern-subtle">
                <div class="pattern-layer">
                    <div class="glow glow-1"></div>
                    <i class="ti ti-shield-lock icon i1"></i>
                    <i class="ti ti-key icon i2"></i>
                    <i class="ti ti-lock icon i3"></i>
                </div>
                <div class="pattern-content">
                    <div class="container d-flex align-items-center justify-content-between h-100">
                        <div class="text-white opacity-75">
                            © 2024 EURIP SSO. Alle Rechte vorbehalten.
                        </div>
                        <div class="d-flex gap-3">
                            <a href="#" class="text-white opacity-75 text-decoration-none">Impressum</a>
                            <a href="#" class="text-white opacity-75 text-decoration-none">Datenschutz</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# ================================================================
       Particles Network - Hero mit SVG-Connections
       ================================================================ #}
    <h2 class="mb-3 mt-5">Particles Network - Hero mit SVG-Verbindungen</h2>
    <p class="text-secondary mb-4">Das Network-Pattern mit exakten SVG-Verbindungslinien und Hero-Content-Komponenten.</p>

    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title">Network Hero (connectionType="svg")</h3>
        </div>
        <div class="card-body p-0">
            <twig:PatternBackground pattern="particles-network" connectionType="svg" theme="dark" size="hero">
                <div class="container py-5">
                    <div class="row align-items-center">
                        <div class="col-lg-7">
                            <div class="security-badge">
                                <div class="icon-wrap">
                                    <i class="ti ti-network"></i>
                                </div>
                                <span>Vernetztes Identity Management</span>
                            </div>
                            <h1>
                                Ihre Identitäten.<br>
                                <span class="highlight">Sicher vernetzt.</span>
                            </h1>
                            <p class="hero-lead">
                                Ein Konto, alle Apps. EURIP SSO verbindet alle Ihre Anwendungen
                                mit einem zentralen, sicheren Authentifizierungsnetzwerk.
                            </p>
                            <div class="hero-actions">
                                <button class="btn btn-particle-primary">
                                    <i class="ti ti-login me-2"></i> Jetzt anmelden
                                </button>
                                <button class="btn btn-particle-secondary">
                                    <i class="ti ti-book me-2"></i> Dokumentation
                                </button>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="glass-card card card-md shadow-lg">
                                <div class="card-body">
                                    <h3 class="card-title">Schnellzugriff</h3>
                                    <p class="text-secondary">Direkt einloggen oder registrieren</p>
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-primary">
                                            <i class="ti ti-login me-2"></i> Anmelden
                                        </button>
                                        <button class="btn btn-outline-secondary">
                                            <i class="ti ti-user-plus me-2"></i> Registrieren
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="stats-grid mt-4 pt-0 border-0 justify-content-start gap-4">
                                <div class="stat-item text-start">
                                    <i class="ti ti-clock"></i>
                                    <span class="stat-value">&lt; 50ms</span>
                                    <span class="stat-label">Token-Validierung</span>
                                </div>
                                <div class="stat-item text-start">
                                    <i class="ti ti-shield-check"></i>
                                    <span class="stat-value">RS256</span>
                                    <span class="stat-label">JWT-Signatur</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </twig:PatternBackground>
        </div>
        <div class="card-footer">
            <pre class="mb-0 bg-dark text-light p-2 rounded"><code>&lt;twig:PatternBackground pattern="particles-network" connectionType="svg" theme="dark" size="hero"&gt;
    &lt;div class="container py-5"&gt;
        &lt;div class="security-badge"&gt;...&lt;/div&gt;
        &lt;h1&gt;Title &lt;span class="highlight"&gt;Highlight&lt;/span&gt;&lt;/h1&gt;
        &lt;p class="hero-lead"&gt;...&lt;/p&gt;
        &lt;div class="hero-actions"&gt;
            &lt;button class="btn btn-particle-primary"&gt;...&lt;/button&gt;
            &lt;button class="btn btn-particle-secondary"&gt;...&lt;/button&gt;
        &lt;/div&gt;
        &lt;div class="glass-card"&gt;...&lt;/div&gt;
        &lt;div class="stats-grid"&gt;...&lt;/div&gt;
    &lt;/div&gt;
&lt;/twig:PatternBackground&gt;</code></pre>
        </div>
    </div>

