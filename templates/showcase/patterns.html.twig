{% extends '@Tabler/showcase/layout.html.twig' %}

{% block title %}Pattern Backgrounds - Tabler Bundle{% endblock %}

{% block page_header %}
    <twig:Tabler:PageHeader
        title="Pattern Backgrounds"
        pretitle="Showcase"
        subtitle="Animierte Hintergrund-Patterns für Hero-Sections, Headers, Footers, Cards und mehr"
        icon="background"
        iconColor="purple"
    />
{% endblock %}

{% block content %}
    {# CSS für Pattern-Backgrounds #}
    <style>
        {{ source('@Tabler/styles/pattern-backgrounds.css.twig') }}
    </style>

    {# Info Alert #}
    <div class="alert alert-info mb-4">
        <div class="d-flex">
            <div class="me-3"><i class="ti ti-info-circle icon"></i></div>
            <div>
                <h4 class="alert-title">Verwendung</h4>
                <p class="mb-2">
                    <strong>Twig Component:</strong><br>
                    <code>&lt;twig:PatternBackground pattern="particles-sso" theme="dark" size="hero"&gt;...&lt;/twig:PatternBackground&gt;</code>
                </p>
                <p class="mb-0">
                    <strong>CSS-Klassen:</strong><br>
                    <code>&lt;section class="pattern-bg pattern-particles-sso pattern-dark pattern-hero"&gt;</code>
                </p>
            </div>
        </div>
    </div>

    {# ================================================================
       Alle Patterns - Dark Theme
       ================================================================ #}
    <h2 class="mb-3">Patterns (Dark Theme)</h2>

    <div class="row row-cards mb-5">
        {% for key, pattern in patterns %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card">
                    <div class="pattern-bg pattern-{{ key }} pattern-dark pattern-card pattern-hover-play">
                        <div class="pattern-layer">
                            {# Pattern Layer - manuell da Twig-Komponente nicht verfügbar sein könnte #}
                            {% if key == 'particles' %}
                                <div class="glow glow-1"></div>
                                <div class="glow glow-2"></div>
                                {% for i in 1..15 %}
                                    <div class="particle p{{ i }}"></div>
                                {% endfor %}
                            {% elseif key == 'particles-sso' %}
                                <div class="glow glow-1"></div>
                                <div class="glow glow-2"></div>
                                {% for i in 1..5 %}
                                    <div class="line l{{ i }}"></div>
                                {% endfor %}
                                <i class="ti ti-shield-lock icon i1"></i>
                                <i class="ti ti-key icon i2"></i>
                                <i class="ti ti-lock icon i3"></i>
                                <i class="ti ti-shield-check icon i4"></i>
                                <i class="ti ti-fingerprint icon i5"></i>
                                <i class="ti ti-user-check icon i6"></i>
                                <i class="ti ti-certificate icon i7"></i>
                                <i class="ti ti-shield icon i8"></i>
                                <i class="ti ti-lock-access icon i9"></i>
                                <i class="ti ti-user-shield icon i10"></i>
                            {% elseif key == 'particles-network' %}
                                {# SVG-basierte Verbindungslinien #}
                                <div class="connection-lines">
                                    <svg viewBox="0 0 100 100" preserveAspectRatio="none">
                                        <line x1="20" y1="15" x2="50" y2="25" />
                                        <line x1="50" y1="25" x2="80" y2="20" />
                                        <line x1="20" y1="15" x2="10" y2="50" />
                                        <line x1="50" y1="25" x2="35" y2="35" />
                                        <line x1="80" y1="20" x2="75" y2="45" />
                                        <line x1="10" y1="50" x2="45" y2="55" />
                                        <line x1="35" y1="35" x2="45" y2="55" />
                                        <line x1="75" y1="45" x2="90" y2="65" />
                                        <line x1="45" y1="55" x2="60" y2="75" />
                                        <line x1="25" y1="80" x2="60" y2="75" />
                                        <line x1="60" y1="75" x2="85" y2="85" />
                                    </svg>
                                </div>
                                {% for i in 1..12 %}
                                    <div class="node n{{ i }}"></div>
                                {% endfor %}
                            {% elseif key == 'waves' %}
                                <div class="wave-container">
                                    <svg class="wave w1" viewBox="0 0 1440 150" preserveAspectRatio="none">
                                        <path fill="rgba(255,255,255,0.3)" d="M0,50 C360,150 1080,0 1440,100 L1440,150 L0,150 Z M1440,50 C1800,150 2520,0 2880,100 L2880,150 L1440,150 Z"></path>
                                    </svg>
                                    <svg class="wave w2" viewBox="0 0 1440 150" preserveAspectRatio="none">
                                        <path fill="rgba(255,255,255,0.2)" d="M0,80 C320,20 720,120 1080,60 L1440,60 L1440,150 L0,150 Z M1440,80 C1760,20 2160,120 2520,60 L2880,60 L2880,150 L1440,150 Z"></path>
                                    </svg>
                                </div>
                            {% elseif key == 'geometric' %}
                                <div class="shape s1"><svg viewBox="0 0 100 100"><circle cx="50" cy="50" r="45" fill="none" stroke="currentColor" stroke-width="2"/></svg></div>
                                <div class="shape s3"><svg viewBox="0 0 100 100"><polygon points="50,10 90,90 10,90" fill="none" stroke="currentColor" stroke-width="2"/></svg></div>
                                <div class="shape s4"><svg viewBox="0 0 100 100"><rect x="10" y="10" width="80" height="80" fill="none" stroke="currentColor" stroke-width="2" rx="5"/></svg></div>
                            {% elseif key == 'blob' %}
                                <div class="blob b1"></div>
                                <div class="blob b2"></div>
                                <div class="blob b3"></div>
                            {% elseif key == 'grid' %}
                                <div class="grid"></div>
                                <div class="scan sc1"></div>
                                <div class="scan sc2"></div>
                                {% for i in 1..5 %}
                                    <div class="dot d{{ i }}"></div>
                                {% endfor %}
                            {% elseif key == 'topo' %}
                                <div class="topo"></div>
                                <div class="accent"></div>
                            {% elseif key == 'dots' %}
                                <div class="dots-grid"></div>
                            {% elseif key == 'circuit' %}
                                <div class="circuit"></div>
                            {% elseif key == 'stream' %}
                                {% for i in 1..24 %}
                                    <div class="stream-particle sp{{ i }}"></div>
                                {% endfor %}
                            {% elseif key == 'rain' %}
                                {% for i in 1..25 %}
                                    <div class="raindrop rd{{ i }}"></div>
                                {% endfor %}
                                {% for i in 1..5 %}
                                    <div class="splash sp{{ i }}"></div>
                                {% endfor %}
                            {% elseif key == 'sandstorm' %}
                                {% for i in 1..18 %}
                                    <div class="sand s{{ i }}"></div>
                                {% endfor %}
                                {% for i in 1..3 %}
                                    <div class="dust d{{ i }}"></div>
                                {% endfor %}
                            {% elseif key == 'autumn' %}
                                {% for i in 1..18 %}
                                    <div class="leaf lf{{ i }}"></div>
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="pattern-content d-flex align-items-center justify-content-center h-100 text-white text-center p-3">
                            <div>
                                <h4 class="mb-1">{{ pattern.name }}</h4>
                                <small class="opacity-75">{{ pattern.description }}</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <code class="text-primary">pattern-{{ key }}</code>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {# ================================================================
       Particles SSO - Variationen
       ================================================================ #}
